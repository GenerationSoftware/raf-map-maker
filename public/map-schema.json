{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Game Map Schema",
  "description": "Schema for game map tree structure with monsters and rooms",
  "type": "object",
  "required": ["id", "roomType", "nextRooms"],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1,
      "description": "Unique identifier for the node"
    },
    "roomType": {
      "type": "integer",
      "enum": [0, 2, 3],
      "description": "Type of room - 0=NULL, 2=BATTLE, 3=GOAL"
    },
    "monsterIndex1": {
      "type": ["string", "null"],
      "enum": ["GOBLIN", "THICC_GOBLIN", "TROLL", "ORC", null],
      "description": "Type of monster in this room (can be null or a monster type for ROOT nodes)"
    },
    "nextRooms": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0
      },
      "minItems": 7,
      "maxItems": 7,
      "description": "Array of 7 room IDs, with 0 meaning no connection"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "roomType": { "const": 0 }
        }
      },
      "then": {
        "properties": {
          "monsterIndex1": {
            "type": "null"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "roomType": { "const": 2 }
        }
      },
      "then": {
        "properties": {
          "monsterIndex1": {
            "type": "string",
            "enum": ["GOBLIN", "THICC_GOBLIN", "TROLL", "ORC"]
          }
        },
        "required": ["monsterIndex1"]
      }
    },
    {
      "if": {
        "properties": {
          "roomType": { "const": 3 }
        }
      },
      "then": {
        "properties": {
          "monsterIndex1": {
            "type": "null"
          },
          "nextRooms": {
            "const": [0, 0, 0, 0, 0, 0, 0]
          }
        }
      }
    },
  ]
}