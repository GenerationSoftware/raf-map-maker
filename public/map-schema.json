{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Game Map Schema",
  "description": "Schema for game map tree structure with monsters and rooms",
  "type": "object",
  "required": ["id", "roomType", "nextRooms"],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1,
      "description": "Unique identifier for the node"
    },
    "roomType": {
      "type": "integer",
      "enum": [0, 1, 2],
      "description": "Type of room - 0=NULL, 1=BATTLE, 2=GOAL"
    },
    "roomData": {
      "type": ["object", "null"],
      "description": "Additional room data based on room type"
    },
    "nextRooms": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0
      },
      "minItems": 6,
      "maxItems": 6,
      "description": "Array of 6 room IDs, with 0 meaning no connection"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "roomType": { "const": 0 }
        }
      },
      "then": {
        "properties": {
          "roomData": {
            "type": "null"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "roomType": { "const": 1 }
        }
      },
      "then": {
        "properties": {
          "roomData": {
            "type": "object",
            "required": ["monsterIndex1"],
            "properties": {
              "monsterIndex1": {
                "type": "integer",
                "minimum": 0,
                "maximum": 65535,
                "description": "Monster index (16-bit unsigned integer)"
              }
            },
            "additionalProperties": false
          }
        },
        "required": ["roomData"]
      }
    },
    {
      "if": {
        "properties": {
          "roomType": { "const": 2 }
        }
      },
      "then": {
        "properties": {
          "roomData": {
            "type": "null"
          },
          "nextRooms": {
            "const": [0, 0, 0, 0, 0, 0]
          }
        }
      }
    }
  ]
}